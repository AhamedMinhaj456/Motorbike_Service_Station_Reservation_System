pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout code from the repository
                git branch: 'admin-flow', url: 'https://github.com/AhamedMinhaj456/Motorbike_Service_Station_Reservation_System'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using the specified Dockerfile
                    def dockerImage = docker.build('admin-flow/frontend-app', "--file frontend/Dockerfile .")
                    dockerImage.push()
                }
            }
        }
        
        stage('Run Container') {
            steps {
                script {
                    // Run the Docker container from the built image
                    docker.image('admin-flow/frontend-app').run('-p 8080:80')
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                // Use kubectl to apply the deployment configuration
                script {
                    sh "kubectl apply -f path/to/deployment.yml"
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Stop and remove the Docker container
                docker.image('admin-flow/frontend-app').stop()
                docker.image('admin-flow/frontend-app').remove()
            }
        }
    }
}
